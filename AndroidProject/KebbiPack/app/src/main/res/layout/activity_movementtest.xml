<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="500px"></androidx.camera.view.PreviewView>

        <Button
            android:id="@+id/button_movement_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="500dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="161dp"
            android:layout_marginBottom="73dp"
            android:text="Forward"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button_movement_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="600dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="73dp"
            android:text="Right"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button_movement_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="400dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="240dp"
            android:layout_marginBottom="73dp"
            android:text="Left"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button_movement_stop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            android:text="Stop"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_movement_backward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="500dp"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            android:text="Backward"
            android:visibility="visible" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>